{
  "tabWidth": 4, // Ширина табуляции
  "semi": true, // Добавление точек с запятой в конце строк
  "singleQuote": true, // Использование одиночных кавычек вместо двойных
  "trailingComma": "all", // Добавление запятых в конец объектов и массивов
  "bracketSpacing": true, // Добавление пробелов вокруг скобок объектов
  "arrowParens": "always" // Добавление скобок для одиночных параметров в стрелочных функциях
}